<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textViewRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="X - Строка:" />

        <SeekBar
            android:id="@+id/Row"
            android:layout_width="match_parent"
            android:min="1"
            android:max="10"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/textViewLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Y - Ряд:" />
        <SeekBar
            android:id="@+id/Line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:min="1"
            android:max="10"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/textViewR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="R - Красный:"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="10dp"/>
        <SeekBar
            android:id="@+id/seekBarR"
            android:min="0"
            android:max="255"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/textViewG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="G - Зеленый:" />
        <SeekBar
            android:id="@+id/seekBarG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:min="0"
            android:max="255"
            />
        <TextView
            android:id="@+id/textViewB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="B - Синий:" />
        <SeekBar
            android:id="@+id/seekBarB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:min="0"
            android:max="255"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sending"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:text="Отправить" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="Данные о подключении" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/return_bt"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Вернуться" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>